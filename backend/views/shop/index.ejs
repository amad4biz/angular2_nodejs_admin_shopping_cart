<div class="alert alert-success" style="display: <%- success ? '' : 'none' %>">
    <%- success ? success : '' %>
</div>

<% products.forEach(function(product, k) { %>
<% if(k % 3 == 0){ %>
<div class="row">
    <% } %>
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="https://images.unsplash.com/photo-1432618131319-b57bfcaea7a7?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=800&h=600&fit=crop&s=0213de1ca9400ab14113d1e9b62b4607" alt="...">
            <div class="caption">
                <h3><%= product.title %></h3>
                <p class="description"><%= product.description %></p>
                <div class="clearfix">
                    <div class="price pull-left">$<%= product.price %></div>
                    <a href="/addToCard/<%= product.id %>" class="btn btn-success pull-right" role="button">Add to Shipping Cart</a>
                </div>
            </div>
        </div>
    </div>
    <% if(k > 0 && (k+1) % 3 == 0){ %>
</div>
<% } %>
<% }) %>
